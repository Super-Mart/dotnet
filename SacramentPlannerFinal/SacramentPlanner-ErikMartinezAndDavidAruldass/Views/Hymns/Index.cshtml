@model IEnumerable<SacramentPlanner_ErikMartinezAndDavidAruldass.Models.Hymn>

@{
    ViewData["Title"] = "Index";
}

<h1>Hymns</h1>

<p>
    <a asp-action="Create">Add a new Hymn</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HymnName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HymnNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HymnName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HymnNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HymnId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HymnId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HymnId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
